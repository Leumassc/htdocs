    <?php 
    if ($_SERVER["REQUEST_METHOD"] == "POST" && isset($_POST['salario'])) {
    
    function calcularImpostoDeRenda($salario){
        if($salario < 1903.98){
            return "Isento de Imposto de Renda";
        }
        elseif($salario >= 1903.99 && $salario <= 2826.65){
            $aliquota = 7.5 / 100;
            return "O valor do seu Iposto de Renda é de R$ " . $salario * 0.075;
        }
        elseif($salario >= 2826.66 && $salario <= 3751.05){
            $aliquota = 15 / 100;
            return "O valor do seu imposto de Renda é de R$" . $salario * 0.15;
        }
        elseif($salario >= 3751.06 && $salario <= 4664.68){
            $aliquota = 22.5 / 100;
            return "O valor do seu imposto de Renda é de R$" . $salario * 0.225;
        }
        else{
            $aliquota = 27.5 / 100;
            return "O valor do seu imposto de Renda é de R$" . $salario * 0.275;
        }

    }

    echo "<div style='text-align: center; font-weight: bold; color: #333;'>";
        echo calcularImpostoDeRenda($salario = $_POST['salario']);
        echo "</div>";
    
    }
    ?>
